<UserControl x:Class="DoAn1.UI.UserControls.IconButtonUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoAn1.UI.UserControls"
             mc:Ignorable="d" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             d:Background="WhiteSmoke">
    <Grid>
        <Button HorizontalContentAlignment="Left" BorderThickness="0" Background="{x:Null}">
            <StackPanel Orientation="Horizontal">
                <materialIcons:MaterialIcon Kind="{Binding UC_Kind}" Foreground="{Binding UC_Foreground}" d:Foreground="Black"/>
                <Viewbox Margin="1">
                    <TextBlock d:Text="Button" Text="{Binding UC_Title}" Margin="15 0 0 0" Foreground="{Binding UC_Foreground}" d:Foreground="Black" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </Viewbox>
            </StackPanel>
        </Button>
    </Grid>
    
</UserControl>
