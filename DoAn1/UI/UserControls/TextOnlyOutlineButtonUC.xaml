<UserControl x:Class="DoAn1.UI.UserControls.TextOnlyOutlineButtonUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:properties="clr-namespace:DoAn1.Properties"
             xmlns:local="clr-namespace:DoAn1.UI.UserControls"
             mc:Ignorable="d">
    <Button x:Name="button" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#01FFFFFF" BorderBrush="{Binding UC_Foreground}" d:BorderBrush="{Binding Source={x:Static properties:Settings.Default}, Path=ColorPalatte_ButtonColor}" BorderThickness="1">
        <TextBlock Text="{Binding UC_Text}" d:Text="Button" FontWeight="SemiBold" Foreground="{Binding UC_Foreground}" Margin="10 5 10 5" d:Foreground="{Binding Source={x:Static properties:Settings.Default}, Path=ColorPalatte_ButtonColor}"/>
    </Button>
</UserControl>