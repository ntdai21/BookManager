<UserControl x:Class="DoAn1.UI.UserControls.TextOnlyOutlineButtonUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoAn1.UI.UserControls"
             mc:Ignorable="d">
    <Button x:Name="button" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#01FFFFFF" BorderBrush="{Binding UC_Foreground}" d:BorderBrush="#593122" BorderThickness="1">
        <TextBlock Text="{Binding UC_Text}" d:Text="Button" FontWeight="SemiBold" Foreground="{Binding UC_Foreground}" Margin="10 5 10 5" d:Foreground="#593122"/>
    </Button>
</UserControl>