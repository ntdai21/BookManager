<Window x:Class="DoAn1.UI.Windows.AddCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoAn1.UI.Windows"
        mc:Ignorable="d"
        Title="AddCategory" Height="130" Width="285">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Add Category" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" Grid.ColumnSpan="2"/>
        <Label Content="Name" Grid.Row="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="categoryTextbox" Grid.Row="1" Grid.Column="1" Height="20" VerticalContentAlignment="Center"/>
        <Button x:Name="addButton" Grid.Row="2" Grid.ColumnSpan="2" Width="50" Height="20" Content="Add" Click="addButton_Click"/>

    </Grid>
</Window>
