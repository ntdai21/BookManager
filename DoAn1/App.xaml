<Application x:Class="DoAn1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DoAn1"
             xmlns:windows="clr-namespace:DoAn1.UI.Windows"
             Startup="Application_Startup"
             StartupUri="UI/Windows/LoginWindow.xaml">
    <Application.Resources>
        <Style TargetType="{x:Type Window}">
            <Setter Property="Background" Value="#F2F0EB"/>

        </Style>

        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="#593122"/>
        </Style>

    </Application.Resources>
</Application>
